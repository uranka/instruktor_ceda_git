// izbacila sam sva pravila koja sam prekrsila
// pusti u rad i ta pravila kad ispravis kod

{
  "node": true,    // For NodeJS
  "undef": true,   // Require all non-global variables to be declared
  "curly": true,   // Require curly braces for blocks and scope
 /* "eqeqeq": true,*/  // Require "===" instead of "==" for equality, ja imam da mi je page nekad broj nekad znak n pa moram sa == da ispitujem
  "immed": true,   // Must wrap immediate invoked functions in parens
  /*"latedef": true,*/ // Must define functions and variables before use, znakovi.js - prva fja mi poziva druga, i druga prvu i koju da stavim prvu uvek javi gresku
  "newcap": true,  // Constructor functions must be capitalized
  "noarg": true,   // Don't allow 'arguments.caller' and 'arguments.callee'
  "sub": true,     // Allow '[]' even if dot notation could be used
  "boss": true,    // Allow assignments where comparisons might be expected
  "eqnull": true,   // Allow use of '== null'
  "browser": true,   // da mi prepozna promenljive document, window 

  // zbog jQuery koji koristim, used to specify a white list of global variables that are not formally defined in the source code  
 // "globals": {   
//        "$": false
//    },
//drugi nacin za isto to je opcija jquery
	"jquery": true,
	
	"globals": {   
        "google": false
    }  
}